{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=ChessClubDb;Integrated Security=True;Connect Timeout=30;MultipleActiveResultSets=true"
    },
    "Serilog": {
        "Using": [],
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy/MM/dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "ChessClub.API.Development.log",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "fileSizeLimitBytes": 10000000, // 10 MB
                    "rollOnFileSizeLimit": true,
                    "retainedFileCountLimit": 2
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "Properties": {
            "ApplicationName": "ConsoleApp"
        }
    }
}
